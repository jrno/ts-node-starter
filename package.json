{
  "name": "typescript-node",
  "version": "1.0.0",
  "description": "slightly opinionated starter for ts and node apps",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "start": "tsc && node ./dist/app.js",
    "build": "rm -rf ./dist/* && tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{ts}\" --quiet --fix",
    "pretest": "eslint --ignore-path .gitignore src/**/*.ts"
  },
  "keywords": [
    "starter",
    "typescript",
    "node"
  ],
  "author": "Jarno Pohjonen <jarno.pohjonen@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3"
  }
}
